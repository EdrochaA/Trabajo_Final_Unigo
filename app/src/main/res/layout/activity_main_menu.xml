<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryBlue">

    <!-- Universidad (centro) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_university"
        android:layout_width="96dp"
        android:layout_height="96dp"
        app:cardCornerRadius="48dp"
        app:cardElevation="6dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="@android:color/white">

        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_university"
                app:tint="@color/primaryBlue" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/menu_university"
                android:textColor="@color/primaryBlue"
                android:textSize="12sp"
                android:layout_marginTop="4dp"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Bicicleta (arriba derecha) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_bike"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:cardCornerRadius="40dp"
        app:cardElevation="4dp"
        android:backgroundTint="@android:color/white"
        app:layout_constraintBottom_toTopOf="@id/card_university"
        app:layout_constraintEnd_toEndOf="@id/card_university"
        android:layout_marginBottom="32dp"
        android:layout_marginEnd="56dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_bike"
                app:tint="@color/primaryBlue" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/menu_bike"
                android:textColor="@color/primaryBlue"
                android:textSize="10sp"
                android:layout_marginTop="2dp"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Tranvía (arriba izquierda) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_tram"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:cardCornerRadius="40dp"
        app:cardElevation="4dp"
        android:backgroundTint="@android:color/white"
        app:layout_constraintBottom_toTopOf="@id/card_university"
        app:layout_constraintStart_toStartOf="@id/card_university"
        android:layout_marginBottom="32dp"
        android:layout_marginStart="56dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_tram"
                app:tint="@color/primaryBlue" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/menu_tram"
                android:textColor="@color/primaryBlue"
                android:textSize="10sp"
                android:layout_marginTop="2dp"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Autobús (izquierda centro) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_bus"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:cardCornerRadius="40dp"
        app:cardElevation="4dp"
        android:backgroundTint="@android:color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/card_university"
        app:layout_constraintBottom_toBottomOf="@id/card_university"
        android:layout_marginStart="32dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_bus"
                app:tint="@color/primaryBlue" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/menu_bus"
                android:textColor="@color/primaryBlue"
                android:textSize="10sp"
                android:layout_marginTop="2dp"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- A pie (abajo) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_walk"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:cardCornerRadius="40dp"
        app:cardElevation="4dp"
        android:backgroundTint="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/card_university"
        app:layout_constraintStart_toStartOf="@id/card_university"
        app:layout_constraintEnd_toEndOf="@id/card_university"
        android:layout_marginTop="32dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_walk"
                app:tint="@color/primaryBlue" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/menu_walk"
                android:textColor="@color/primaryBlue"
                android:textSize="10sp"
                android:layout_marginTop="2dp"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Perfil (derecha centro) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_profile"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:cardCornerRadius="40dp"
        app:cardElevation="4dp"
        android:backgroundTint="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/card_university"
        app:layout_constraintBottom_toBottomOf="@id/card_university"
        android:layout_marginEnd="32dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_profile"
                app:tint="@color/primaryBlue" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/menu_profile"
                android:textColor="@color/primaryBlue"
                android:textSize="10sp"
                android:layout_marginTop="2dp"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>